<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoCuestionario" android:orientation="vertical">

    <TextView
        android:textColor="#5564eb"
        android:gravity="center"
        android:textSize="40dp"
        android:text="Nuevo Cuestionario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@mipmap/icono_preguntas_2_round"
        android:layout_width="200dp"
        android:layout_height="100dp"/>

    <TextView

        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="25dp"
        android:text="Usuario:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:textSize="30dp"
        android:text="Juan Sebastian Morales"
        android:layout_margin="20dp"
        android:id="@+id/nombre_usuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <TextView
        android:gravity="center"
        android:textSize="25dp"
        android:text="Fecha inicio: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Juan Sebastian Morales"
        android:id="@+id/fecha_inicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>

    <Button
        android:onClick="empezarCuestionario"
        android:backgroundTint="#5564eb"
        android:text="EMPEZAR"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

</androidx.appcompat.widget.LinearLayoutCompat>